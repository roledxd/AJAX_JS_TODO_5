{% extends 'partials/layout.njk' %}
{% block title %}Home{% endblock %}
{% block content %}
    {% include "partials/paginate.njk" %}
    <div class="row">
        {% for post in posts %}
            <div class="col-3 mb-2">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">{{post.title}}</h5>
                        <p class="card-text">{{post.snippet()}}</p>
                        <a href="/posts/view/{{post.id}}" class="btn btn-primary">More</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
