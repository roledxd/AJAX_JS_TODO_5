{% extends 'partials/layout.njk' %}
{% block title %}Posts{% endblock %}
{% block content %}
    <a class="btn btn-primary mt-2" href="/posts/create">Add Post</a> 
    {% include "partials/paginate.njk" %}
    <table class="table table-hover table-striped">
        <thead>
            <th>ID</th>
            <th>Title</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Actions</th>
        </thead>
        <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{post.id}}</td>
                    <td>{{post.title}}</td>
                    <td>{{post.createdAt}}</td>
                    <td>{{post.updatedAt}}</td>
                    <td>
                       <div class="btn-group" role="group" aria-label="Basic example">
                            <a class="btn btn-info" href="/posts/view/{{post.id}}">View</a>
                            <a class="btn btn-warning" href="/posts/edit/{{post.id}}">Edit</a>
                            <a class="btn btn-danger" href="/posts/delete/{{post.id}}">Delete</a>
                        </div> 
                    </td>
                </tr>
            {% endfor %}
        </tbody>
         <tfoot>
            <th>ID</th>
            <th>Title</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Actions</th>
        </tfoot>
    </table>

    {% include "partials/paginate.njk" %}
{% endblock %}
